<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <declare-styleable name="LogButtons">
    	
    </declare-styleable>
    
    <style name="text"></style>
    <style name="line"></style>
        
    <!-- Special Text Styles -->
    <style name="text.header">
        <item name="android:textColor">
            @android:color/white
        </item>
        <item name="android:textAllCaps">
            true
        </item>
        <item name="android:textIsSelectable">
            false
        </item>
        <item name="android:textStyle">
            bold
        </item>
        <item name="android:paddingTop">
            5dp
        </item>
        <item name="android:paddingLeft">
            10dp
        </item>
    </style>
    
    <!-- Event Name "Buttons" -->
    <style name="text.eventNameButton" parent="@style/selectableItem">
        <item name="android:textSize">
            17.5sp
        </item>
        <item name="android:gravity">
            center_vertical
        </item>
    </style>
    
    <!-- Event list items -->
    <style name="text.eventListItem">
        <item name="android:textSize">
            12.5sp
        </item>
    </style>
    
    <!-- Lines (Literally, just lines) -->
    <style name="line.header">
        <item name="android:background">
            @android:color/white
        </item>
    </style>
    
    <style name="line.divider">
        <item name="android:background">
            @android:drawable/divider_horizontal_dark
        </item>
    </style>
</resources>
