<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <declare-styleable name="LogButtons">
    	
    </declare-styleable>
        
    <!-- Special Text Styles -->
    <style name="titleText">
        <item name="android:textColor">
            @android:color/white
        </item>
        <item name="android:textAllCaps">
            true
        </item>
        <item name="android:textIsSelectable">
            false
        </item>
        <item name="android:textStyle">
            bold
        </item>
        <item name="android:paddingTop">
            5dp
        </item>
        <item name="android:paddingLeft">
            10dp
        </item>
    </style>
    
    <style name="logEventNameText" parent="@style/selectableItem">
        <item name="android:textSize">
            17.5sp
        </item>
        <item name="android:gravity">
            center_vertical
        </item>
    </style>
    
    <!-- Lines (Literally, just lines) -->
    <style name="title_line">
        <item name="android:background">
            @android:color/white
        </item>
    </style>
    
    <style name="horizontal_line">
        <item name="android:background">
            @android:drawable/divider_horizontal_dark
        </item>
    </style>
    
    <style name="vertical_line">
        <item name="android:background">
            @android:drawable/divider_horizontal_dark
        </item>
    </style>
</resources>
