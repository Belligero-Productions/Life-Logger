<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <declare-styleable name="LogButtons">
    	
    </declare-styleable>
    
    <style name="horizontal_line">
        <item name="android:background">
            @android:drawable/divider_horizontal_dark
        </item>
        <item name="android:height">
            2dip
        </item>
        <item name="android:width">50dp</item>
    </style>
    
    <style name="vertical_line">
        <item name="android:background">
            #FF0000
        </item>
    </style>
    
    <style name="titleText">
        <item name="android:textColor">
            @android:color/white
        </item>
        <item name="android:textAllCaps">
            true
        </item>
        <item name="android:textIsSelectable">
            false
        </item>
        <item name="android:textStyle">
            bold
        </item>
        <item name="android:paddingTop">
            5dp
        </item>
        <item name="android:paddingLeft">
            10dp
        </item>
    </style>
</resources>
