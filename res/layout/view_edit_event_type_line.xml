<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<CheckBox android:id="@+id/check_selectEventType"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
    />
	
	<EditText android:id="@+id/edit_eventName"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    
	    android:layout_toRightOf="@id/check_selectEventType"
	    android:layout_toLeftOf="@+id/toggle_isActive"
	    
	    android:inputType="textCapWords"
    />
	
	<!-- Make sure the width matches edit_event_types.xml's "Active" header -->
	<ToggleButton android:id="@+id/toggle_isActive"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    
	    android:width="75sp"
	    
	    android:textOn="@string/toggle_active"
	    android:textOff="@string/toggle_inactive"
    />
</RelativeLayout>