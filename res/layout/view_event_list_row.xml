<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_eventRow"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    
    android:clickable="true"
    android:longClickable="true"
    
    style="@style/selectableItem"
    android:tag="eventListRow"
>
    
	<TextView android:id="@+id/text_eventName"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    
	    android:layout_alignParentLeft="true"
	    
	    style="@style/text.eventListItem"
    />
	
	<TextView android:id="@+id/text_eventTime"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    
	    android:layout_centerHorizontal="true"
	    
	    style="@style/text.eventListItem"
	/>
	
	<TextView android:id="@+id/text_eventDate"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    
	    android:layout_alignParentRight="true"

	    style="@style/text.eventListItem"
	/>
	
	<include layout="@layout/chunk_divider_line"
	    android:layout_alignParentBottom="true"
	/>
</RelativeLayout>